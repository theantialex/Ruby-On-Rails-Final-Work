<p></p>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<div class="wrapper fadeInDown">
  <div id="formContent">

  <form>
  <div class = "header"><%=t('Welcome to our site!')%></div>
  <div>
    <p><label class="form-label"><%=t('Email')%></label></p>
    <%= f.email_field :email, class:"field", autofocus: true, autocomplete: "email", id: "email_se_id" %>
  </div>
  <div>
    <label class="form-label"><%=t('Password')%></label>
    <%= f.password_field :password, class:"field", autocomplete: "current-password", id: "pass_id"  %>
 </div>
 <div>
  </div>
 <div>
    <%= f.submit t('Log in') %>
    </div>
  </form>

  <div id="formFooter">
    <a class="underlineHover"><%= link_to t('Sign up'), new_registration_path(resource_name) %></a>
  </div>
  <% end %>
  </div>
</div>