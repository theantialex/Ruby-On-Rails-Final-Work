
<h2 class="text-center m-5"><%=t('Sign up')%></h2>
<section class="col-8 offset-2 col-sm-6 offset-sm-3">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<div class="wrapper fadeInDown">
  <div id="formContent">
    <div class="all-field">
    <p><label class="field-label"><%=t('Name')%></label></p>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control mar', id: "name_id" %>
  </div>

  <div class="all-field">
    <p><label class="field-label"><%=t('Email')%></label></p>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control mar', id: "email_id"  %>
  </div>

  <div class="all-field">
    <p><label class="field-label"><%=t('Password')%></label></p>
    <% if @minimum_password_length %>
    <em><%= @minimum_password_length %> <%=t('characters minimum')%></em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control mar', id: "password_id"  %>
  </div>

  <div class="all-field">
    <p><label class="field-label"><%=t('Password confirmation')%></label></p>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control mar', id: "password_conf_id"  %>
  </div>

  <div class="actions">
    <%= f.submit t('Sign up'), class: 'btn btn-primary m-2'  %>
  </div>
  </div>
<% end %>
</div>

</section>
